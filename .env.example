# Django
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,sso-idp.local
DJANGO_SETTINGS_MODULE=config.settings

# Database
DATABASE_URL=postgresql://sso_user:sso_password@postgres:5432/sso_idp
POSTGRES_USER=sso_user
POSTGRES_PASSWORD=sso_password
POSTGRES_DB=sso_idp
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_URL=redis://redis:6379/1

# OAuth2 / OIDC
OAUTH_TOKEN_EXPIRY_ACCESS=3600
OAUTH_TOKEN_EXPIRY_REFRESH=604800
OAUTH_TOKEN_EXPIRY_ID_TOKEN=3600
PKCE_REQUIRED=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT
JWT_ALGORITHM=RS256
JWT_SECRET_KEY=your-jwt-secret
JWT_PRIVATE_KEY=/app/certs/private_key.pem
JWT_PUBLIC_KEY=/app/certs/public_key.pem

# Admin
ADMIN_EMAIL=admin@sso-idp.local
ADMIN_PASSWORD=secure_admin_password

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_SAMESITE=Lax
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password
DEFAULT_FROM_EMAIL=noreply@sso-idp.local

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=
